{
  "compilerOptions": {
    "target": "esnext",
    "noErrorTruncation": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "@vitest/browser/matchers"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "content/**/*",
    "components/**/*",
    "common/**/*",
    "env.d.ts"
  ]
}